/* page/component/like/like.wxss */
.like-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.like-item {
  width: calc(50% - 20rpx);
  margin-bottom: 20rpx;
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 10rpx;
  background-color: #f5f6f5;
}

.like-item image {
  width: 100%;
  height: 280rpx;
  margin-bottom: 10rpx;
}

.like-item text {
  font-size: 32rpx;
  color: #AB956D;
  margin-bottom: 10rpx;
  text-align: center;
}